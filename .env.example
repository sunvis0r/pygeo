# PostgreSQL Database Configuration
POSTGRES_DB=pygeo_db
POSTGRES_USER=pygeo_user
POSTGRES_PASSWORD=change_this_password

# Database URL for application
DATABASE_URL=postgresql://pygeo_user:change_this_password@postgres:5432/pygeo_db

# Application Settings
PYTHONUNBUFFERED=1
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Data Source
# Options: 'database' or 'files'
# 'database' - load data from PostgreSQL
# 'files' - load data from src_data directory
DATA_SOURCE=database